{
    "variables": {
        "hostname": "elk",

        "iso": "",
        "checksum": "",
        "version-number": "",
        "version-name": "",

        "boot_command-virtualbox": "",
        "boot_command-qemu": "",

        "username": "",
        "password": ""
    },
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:{{user `version-number` }}",
            "export_path": "output/{{user `hostname`}}-docker.tar"
        },
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Ubuntu_64",
            "iso_url": "{{user `iso` }}",
            "iso_checksum": "{{ user `checksum` }}",
            "iso_checksum_type": "md5",
            "output_directory": "output/{{user `hostname`}}-vbox",
            "http_directory": "../../common/httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "{{user `username`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_wait_timeout": "90m",
            "shutdown_command": "sudo shutdown -P now",
            "boot_command": "{{user `boot_command-virtualbox`}}"
        },
        {
            "type": "qemu",
            "iso_url": "{{user `iso` }}",
            "iso_checksum": "{{user `checksum` }}",
            "iso_checksum_type": "md5",
            "output_directory": "output/{{user `hostname`}}-kvm",
            "ssh_wait_timeout": "30s",
            "shutdown_command": "sudo shutdown -P now",
            "disk_size": 20000,
            "format": "qcow2",
            "headless": true,
            "accelerator": "kvm",
            "http_directory": "../../common/httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "{{user `username`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "90m",
            "vm_name": "{{user `hostname`}}",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "boot_command": "{{user `boot_command-qemu`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "../../common/shell/puppet.sh",
            "execute_command": "echo 'packer' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
            "environment_vars":
            [
                "version={{user `version-name`}}"
            ]
        },
        {
            "type": "puppet-masterless",
            "manifest_file": "site.pp",
            "module_paths":
            [
                "../../common/puppet",
                "./modules"
            ]
        },
        {
            "type": "shell",
            "script": "../../common/shell/remove-local-apt-proxy.sh",
            "execute_command": "echo 'packer' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        }
    ]
}
